<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns       = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "nl.custompixels.test"
        versionCode = "10"
        version     = "1.1.0">
 
    <name>Mijn test applicatie</name>
 
    <description>
        Een test applicatie
    </description>
 
    <author href="https://custompixels.nl" email="henk@custompixels.nl">
        CustomPixels
    </author>
	
	<preference name="windows-identity-name" value="CustomPixels" />
	<preference name="android-minSdkVersion" value="23" />
	<preference name="buildToolsVersion" value="23.0.1" />
	<preference name="phonegap-version" value="cli-8.0.0" />
	
    <feature name="http://api.phonegap.com/1.0/camera"/>
    <feature name="http://api.phonegap.com/1.0/contacts"/>
    <feature name="http://api.phonegap.com/1.0/file"/>
    <feature name="http://api.phonegap.com/1.0/geolocation"/>
    <feature name="http://api.phonegap.com/1.0/media"/>
    <feature name="http://api.phonegap.com/1.0/network"/>
    <feature name="http://api.phonegap.com/1.0/notification"/>
	
	<plugin name="cordova-plugin-googlemaps" spec="^2.2.3">
		<variable name="API_KEY_FOR_ANDROID" value="(api key)" />
		<variable name="API_KEY_FOR_IOS" value="(api key)" />
		<variable name="PLAY_SERVICES_VERSION" value="11.8.0" />
		<variable name="LOCATION_WHEN_IN_USE_DESCRIPTION" value="Show your location on the map" />
		<variable name="LOCATION_ALWAYS_USAGE_DESCRIPTION" value="Trace your location on the map" />
	</plugin>
  
</widget>